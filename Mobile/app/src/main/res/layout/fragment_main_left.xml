<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    android:scaleType="fitXY" >

    <RelativeLayout
        android:id="@+id/rl_fml_proyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_up_down_line" >

        <ImageView
            android:id="@+id/iv_fml_logo"
            android:layout_width="181dp"
            android:layout_height="112dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo_sargus"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" >

            <TextView
                android:id="@+id/tv_fml_proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text=""
                android:textColor="@color/negro"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="PrivateResource,RtlSymmetry" />

            <TextView
                android:id="@+id/tv_fml_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/lsm_proyecto"
                android:layout_marginLeft="128dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:ignore="PrivateResource,RtlSymmetry" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_ticket"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_ticket"
                custom:src="@drawable/ic_build_24"
                custom:tint="@color/negro" />

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_scanning"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_scanning"
                custom:src="@android:drawable/ic_menu_search"
                custom:tint="@color/negro" />

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_item"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_item"
                custom:src="@drawable/ic_info_24"
                custom:tint="@color/negro" />

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_captura"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_captura"
                custom:src="@drawable/ic_input_24"
                custom:tint="@color/negro" />

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_barcode"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_captura"
                custom:src="@drawable/ic_input_24"
                custom:tint="@color/negro" />

            <com.qbo3d.sargus.CustomControls.MenuItemList
                android:id="@+id/mil_logout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                custom:text = "@string/lsm_logout"
                custom:src="@drawable/ic_clear_48"
                custom:tint="@color/negro" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/naranja_alpha" />
</LinearLayout>